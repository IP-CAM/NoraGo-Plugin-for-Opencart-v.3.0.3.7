{{ header }}
{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ edit }}" class="btn btn-primary">{{ text_edit }}</a>
                <a href="{{ password }}" class="btn btn-primary">{{ text_password }}</a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if success %}
            <div class="alert alert-success alert-dismissible">
                <i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-sm-12">
                <div class="well">
                    <h4>{{ text_my_account }}</h4>
                    <ul class="list-unstyled">
                        <li><a href="{{ edit }}">{{ text_edit }}</a></li>
                        <li><a href="{{ password }}">{{ text_password }}</a></li>
                        <li><a href="{{ address }}">{{ text_address }}</a></li>
                        <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
                    </ul>
                </div>
                <div class="well">
                    <h4>{{ text_my_orders }}</h4>
                    <ul class="list-unstyled">
                        <li><a href="{{ order }}">{{ text_order }}</a></li>
                        <li><a href="{{ download }}">{{ text_download }}</a></li>
                        <li><a href="{{ reward }}">{{ text_reward }}</a></li>
                        <li><a href="{{ return }}">{{ text_return }}</a></li>
                        <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                        <li><a href="{{ recurring }}">{{ text_recurring }}</a></li>
                    </ul>
                </div>
                <div class="well">
                    <h4>{{ text_my_newsletter }}</h4>
                    <ul class="list-unstyled">
                        <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
                    </ul>
                </div>
                
                <!-- Tabela personalizada adicionada -->
                {% if accounts %}
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>{{ text_account_number }}</th>
                                <th>{{ text_username }}</th>
                                <th>{{ text_password }}</th>
                                <th>{{ text_provider_id }}</th>
                                <th>{{ text_subscription }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for account in accounts %}
                            <tr>
                                <td>{{ account.number }}</td>
                                <td>{{ account.username }}</td>
                                <td>{{ account.password }}</td>
                                <td>{{ account.provider_id }}</td>
                                <td>{{ account.subscription }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>{{ text_no_accounts }}</p>
                {% endif %}
                
            </div>
        </div>
    </div>
</div>
{{ footer }}